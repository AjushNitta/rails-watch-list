<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h1>Create a new List</h1>
        <%= simple_form_for @list do |f| %>
          <%= f.input :name %>
          <%= f.submit %>
        <% end %>
        <%= link_to "Back to Lists of Movies", lists_path(@lists) %>
      </div>
    </div>
  </div>
</div>
