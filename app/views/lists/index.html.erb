<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to "#", class: "navbar-brand" do %>
    <i class="fa-solid fa-clapperboard"></i>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <%# if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "My list", lists_path(@list), class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "New list", new_list_path, class: "nav-link" %>
          </li>
      </ul>
    </div>
  </div>
</div>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('/assets/moviebanner.jpg');">
  <div class="container">
    <h1>Watch List</h1>
    <%= cl_image_tag("a34pgy2oeuwfk59hvcca",
      width: 400, height: 300, crop: :fill) %>
  </div>
</div>

<br>
  <div style="float: right; padding-right: 18px;">
    <%= link_to "Add a new list", new_list_path, class: 'btn btn-primary'%>
  </div>
<br>
<br>

<div class="cards">
  <% @lists.each do |list|%>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('/assets/moviecategory.jpg')">
      <%=link_to list.name, list_path(list) %>
    </div>
  <% end %>
</div>
